<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>UserLoginServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLoginServlet</servlet-name>
    <url-pattern>/user/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.LoginCodeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/user/login/code</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserRegisterServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.UserRegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserRegisterServlet</servlet-name>
    <url-pattern>/user/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InsertContentServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.InsertContentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InsertContentServlet</servlet-name>
    <url-pattern>/content/insert</url-pattern>
  </servlet-mapping>


<servlet>
<servlet-name>DeleteContentServlet</servlet-name>
<servlet-class>com.guotao.www.controller.DeleteContentServlet</servlet-class>
</servlet>
  <servlet-mapping>
<servlet-name>DeleteContentServlet</servlet-name>
<url-pattern>/content/delete</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>GetOneContentServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.GetOneContentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetOneContentServlet</servlet-name>
    <url-pattern>/content/getOne</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetAllContentServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.GetAllContentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetAllContentServlet</servlet-name>
    <url-pattern>/content/getAll</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetAllContentInLoginServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.GetAllContentInLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetAllContentInLoginServlet</servlet-name>
    <url-pattern>/login/getAll</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetUserAllContentServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.GetUserAllContentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetUserAllContentServlet</servlet-name>
    <url-pattern>/content/getUserAll</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateUserInformationServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.UpdateUserInformationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateUserInformationServlet</servlet-name>
    <url-pattern>/user/information/update</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogOutServlet</servlet-name>
    <servlet-class>com.guotao.www.controller.LogOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogOutServlet</servlet-name>
    <url-pattern>/user/logout</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.guotao.www.controller.LoginFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
